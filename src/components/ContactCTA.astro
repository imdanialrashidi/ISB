---
interface Props {
  title: string;
  description: string;
  phoneHref: string;
  phoneLabel: string;
  whatsappHref?: string;
}

const {
  title,
  description,
  phoneHref,
  phoneLabel,
  whatsappHref = "/contact#whatsapp",
} = Astro.props as Props;
---

<section
  class="overflow-hidden rounded-2xl border border-brand-primary bg-brand-primary text-white shadow-soft"
>
  <div class="container-wrap py-10 sm:py-12">
    <h2 class="text-2xl font-bold sm:text-3xl">{title}</h2>
    <p class="mt-4 max-w-2xl text-sm leading-8 text-slate-200 sm:text-base">{description}</p>
    <div class="mt-6 flex flex-wrap gap-3">
      <a
        href={phoneHref}
        class="rounded-full bg-brand-accent px-5 py-2.5 text-sm font-semibold text-white hover:bg-emerald-700"
      >
        {phoneLabel}
      </a>
      <a
        href={whatsappHref}
        target={whatsappHref.startsWith("https://wa.me/") ? "_blank" : undefined}
        rel={whatsappHref.startsWith("https://wa.me/") ? "noopener noreferrer" : undefined}
        class="rounded-full border border-white/70 px-5 py-2.5 text-sm font-semibold text-white hover:bg-white hover:text-brand-primary"
      >
        ارسال درخواست در واتساپ
      </a>
    </div>
  </div>
</section>
