---
interface Props {
  title: string;
  subtitle: string;
  primaryCtaLabel: string;
  primaryCtaHref: string;
  secondaryCtaLabel: string;
  secondaryCtaHref: string;
}

const { title, subtitle, primaryCtaLabel, primaryCtaHref, secondaryCtaLabel, secondaryCtaHref } =
  Astro.props as Props;
---

<section class="relative overflow-hidden border-b border-brand-border bg-brand-primary text-white">
  <div class="absolute inset-0 opacity-90">
    <img
      src="/images/placeholders/hero-pattern.svg"
      width="1200"
      height="800"
      alt=""
      class="h-full w-full object-cover"
      loading="eager"
      fetchpriority="high"
    />
  </div>
  <div class="animate-float-soft pointer-events-none absolute -right-10 top-12 h-44 w-44 rounded-full bg-emerald-300/20 blur-3xl">
  </div>
  <div class="pointer-events-none absolute -left-10 bottom-8 h-40 w-40 rounded-full bg-slate-200/20 blur-3xl">
  </div>
  <div class="container-wrap relative py-16 sm:py-24">
    <div class="max-w-3xl">
      <h1 class="animate-fade-up text-3xl font-bold leading-tight sm:text-4xl lg:text-5xl">{title}</h1>
      <p class="animate-fade-up mt-5 text-base leading-8 text-slate-200 sm:text-lg" style="animation-delay: 90ms">
        {subtitle}
      </p>
      <div class="animate-fade-up mt-8 flex flex-wrap items-center gap-3" style="animation-delay: 180ms">
        <a
          href={primaryCtaHref}
          class="rounded-full bg-brand-accent px-6 py-3 text-sm font-semibold text-white hover:bg-emerald-700"
          aria-label={primaryCtaLabel}
        >
          {primaryCtaLabel}
        </a>
        <a
          href={secondaryCtaHref}
          class="rounded-full border border-white/70 px-6 py-3 text-sm font-semibold text-white hover:bg-white hover:text-brand-primary"
          aria-label={secondaryCtaLabel}
        >
          {secondaryCtaLabel}
        </a>
      </div>
    </div>
  </div>
</section>
