---
import ProjectsTable from "../components/ProjectsTable.astro";
import SectionTitle from "../components/SectionTitle.astro";
import projectsData from "../content/projects.json";
import BaseLayout from "../layouts/BaseLayout.astro";
import type { ProjectItem } from "../lib/types";

const projects = projectsData as ProjectItem[];
---

<BaseLayout
  title="رزومه پروژه‌ها"
  description="رزومه پروژه‌های انجام‌شده و در حال انجام شرکت ایمن صنعت باتاب بر اساس مستندات رسمی شرکت."
  canonicalPath="/projects"
>
  <section class="section-block">
    <div class="container-wrap">
      <SectionTitle
        title="رزومه پروژه‌های شرکت"
        subtitle="نمونه پروژه‌های ثبت‌شده شرکت در حوزه استقرار HSE، بازرسی فنی، ارزیابی ایمنی و خدمات تخصصی صنعتی."
      />
      <ProjectsTable projects={projects} />
      <p class="mt-4 text-xs text-brand-muted">
        برای جزئیات بیشتر هر پروژه، با تیم پشتیبانی تماس بگیرید.
      </p>
    </div>
  </section>
</BaseLayout>
